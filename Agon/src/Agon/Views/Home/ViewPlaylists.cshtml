@model List<PlaylistVM>
<h1>Click a playlist to import it from Spotify!</h1>
<div class="list-group" style="display:inline-block;">
    @foreach (var playlist in Model)
    {
        <form asp-controller="Quiz" asp-action="Create" onsubmit="return confirm('Do you want to create a quiz from @playlist.Name?');">
            <input type="hidden" name="@nameof(PlaylistVM.Name)" value="@playlist.Name" />
            <input type="hidden" name="@nameof(PlaylistVM.SpotifyRef)" value="@playlist.SpotifyRef" />
            <button asp-controller="Quiz" asp-action="@playlist.Name" class="list-group-item btn btn-default">@playlist.Name</button>
        </form>
    }
</div>