@model Quiz
<h1>Edit your quiz!</h1>
@{ int counter = 0;}
@foreach (var song in Model.Songs)
{
    <div id="@counter" class="RemoveDiv">
        <form asp-controller="Quiz" asp-action="EditSong">
            <input type="hidden" name="id" value='@Json.Serialize(song)' />
            <input type="submit" class="btn btn-default" value="@song.Artist - @song.Title" />
        </form>
        <button class="RemoveSong" name="@(counter++)">Remove</button>       
    </div>
}
<form asp-controller="Quiz" asp-action="StartQuiz">
    <input type="hidden" name="_id" value='@Model._id' />
    <input type="submit" id="startQuizButton" class="btn btn-primary" disabled="disabled" value="Start quiz!" />
</form>
<button class="btn btn-success" onclick="location.href='@Url.Action("AddSong", "Quiz")'"><span class="glyphicon glyphicon-plus" style="pointer-events:none;"></span>Add song</button>
<button class="btn btn-success" id="saveQuiz"><span class="glyphicon glyphicon-floppy-disk" style="pointer-events:none;"></span>&nbspSave</button>
<script src="~/js/SaveQuizAjax.js"></script>
<script src="~/js/RemoveSongFromQuiz.js"></script>