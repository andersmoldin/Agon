@model QuizPlayerVM


<form asp-controller="Quiz" asp-action="SubmitAnswer">
    <label asp-for="SubmitterName"></label><br/>
    <input asp-for="SubmitterName" />
    <span asp-validation-for="SubmitterName"></span>
    @foreach (var song in Model.Songs)
    {
        @foreach (var question in song.Questions)
        {
            <p>@question.Text</p><input type="text" name="answer" />
        }
    }
    <br />
    <input type="hidden" name="runningQuizId" value="@Model._id" />
    <input type="submit" value="Submit answers!" />
</form>