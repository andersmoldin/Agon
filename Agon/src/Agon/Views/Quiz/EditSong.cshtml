@model EditSongVM
<h1>@Model.Artist - @Model.Title</h1>
<div class="container-full">
    <div class="list-group">
        <form action="/Quiz/UpdateQuestions" method="post" id="editSongForm">
            <div class="col-md-12" id="formDiv">
                @{ int counter = 0;}
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    <br />
                    <div id="input-group-@(counter)" class="input-group" style="margin-left:auto;margin-right:auto;min-width:200px;max-width:400px;">
                        <span class="input-group-addon">
                            <input type="button" aria-label="..."name="@counter" id="@counter" class="removeRow" value="Remove">
                        </span>
                        <input type="text" class="form-control" name="item.Text" id="Question-@counter" value="@Model.Questions[i].Text">
                        <input type="text" class="form-control" name="item.CorrectAnswer" value="@Model.Questions[i].CorrectAnswer" id="Answer-@(counter++)">
                    </div>
                }
            </div>
            @*@{ counter = 0;}
                @foreach (var item in Model.Questions)
                {
                    <input type="text" name="item.Text" id="Question-@counter" value="@item.Text" />
                    <input type="text" name="item.CorrectAnswer" value="@item.CorrectAnswer" id="Answer-@(counter++)" /><br />

                }*@
            <input type="hidden" value="@Model.SpotifyReferenceID" name="id" />
            <button id="addField" name="@counter">Add new question</button>
            <input type="submit" value="Save" />
        </form>
    </div>
</div>
<script src="~/js/AddNewQuestion.js"></script>