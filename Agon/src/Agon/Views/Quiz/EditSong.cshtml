@model EditSongVM
<h1>@Model.Artist - @Model.Title</h1>
<div class="container-full">
    <div class="list-group">
        <form action="/Quiz/UpdateQuestions" method="post" id="editSongForm">
            <div class="col-md-12" id="formDiv">
                @{ int counter = 0;}
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    <div id="input-group-@(counter)" class="input-group" style="margin-left:auto;margin-right:auto;min-width:200px;max-width:400px;padding-bottom:20px;">
                        @*<br />*@
                        <span class="input-group-addon">
                            <button type="button" aria-label="..." name="@counter" id="@counter" class="removeRow btn btn-danger">
                                <span class="glyphicon glyphicon-trash" style="pointer-events:none;"></span>&nbspRemove
                            </button>
                        </span>
                        <input type="text" class="form-control" name="item.Text" id="Question-@counter" value="@Model.Questions[i].Text">
                        <input type="text" class="form-control" name="item.CorrectAnswer" value="@Model.Questions[i].CorrectAnswer" id="Answer-@(counter)">
                    </div>
                    <div id="divCounter-@(counter++)" style="display:none;"></div>
                }
            </div>
            <input type="hidden" value="@Model.SpotifyReferenceID" name="id" />
            <button id="addField" class="btn btn-primary" name="@counter"><span class="glyphicon glyphicon-plus" style="pointer-events:none;"></span>Add new question</button>
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-floppy-disk" style="pointer-events:none;"></span>&nbspSave</button>
        </form>
    </div>
</div>
<script src="~/js/AddNewQuestion.js"></script>
